<dashboard version="1.1" theme="light">
  <label>SOC Security Dashboard</label>

  <!-- Row 1 -->
  <row>
    <panel>
      <table>
        <title>Brute Force Login Detection</title>
        <search>
          <query>
            index=security sourcetype=WinEventLog:Security EventCode=4625 
            | bin _time span=10m 
            | stats count by _time, src, user 
            | where count > 5
          </query>
        </search>
        <option name="drilldown">none</option>
      </table>
    </panel>

    <panel>
      <table>
        <title>Privilege Escalation Attempt</title>
        <search>
          <query>
            index=security sourcetype=WinEventLog:Security EventCode=4672
            | stats count by _time, user, host
          </query>
        </search>
        <option name="drilldown">none</option>
      </table>
    </panel>
  </row>

  <!-- Row 2 -->
  <row>
    <panel>
      <table>
        <title>Suspicious PowerShell Command</title>
        <search>
          <query>
            index=security sourcetype=sysmon EventCode=1 Image="*\\powershell.exe" 
            (CommandLine="*EncodedCommand*" OR CommandLine="*IEX*") 
            | stats count by _time, host, user, CommandLine
          </query>
        </search>
        <option name="drilldown">none</option>
      </table>
    </panel>

    <panel>
      <table>
        <title>New Service Creation</title>
        <search>
          <query>
            index=security sourcetype=WinEventLog:System EventCode=7045
            | stats count by _time, servicename, host, user
          </query>
        </search>
        <option name="drilldown">none</option>
      </table>
    </panel>
  </row>
</dashboard>
